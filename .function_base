# vi: syntax=zsh
# Return the glyph from given NerdFont code
function glyph(){
    echo -ne "\u$1" | xclip -selection primary
    notify-send "Glyph $(xclip -o) was added to the clipboard" &> /dev/null
}

function mkd(){
    mkdir $1 && cd $1    
}

function ls(){
    ls -ahN --color=auto --group-directories-first    
}
