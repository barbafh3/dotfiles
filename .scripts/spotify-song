#!/bin/bash

playerctl -p spotify metadata &> /dev/null
result=$(echo $?)
if [ $result -eq 0 ] ; then
    song=$(playerctl -p spotify metadata xesam:title)
    artist=$(playerctl -p spotify metadata xesam:artist)
    response="ï†¼ Spotify | $artist - $song "
else
    response="Spotify not running"
fi

echo "$response"
