#!/bin/bash

OPTIONS='Cancelar\nDesligar\nReiniciar\nSuspender\nSair\n'
CONFIRM='NÃ£o\nSim'

CHOICE=$(echo -e $OPTIONS | rofi -dmenu -i -p "Sistema")

if [ "$CHOICE" != "Cancelar" ] && [ "$CHOICE" != "" ] ; then

    OUTPUT=$(echo -e $CONFIRM | rofi -dmenu -i -p "Tem certeza?")
    if [ "$OUTPUT" = "Sim" ] ; then
        case $CHOICE in
            "Sair")
                bspc exit
                ;;
            "Reiniciar")
                reboot
                ;;
            "Desligar")
                shutdown -h now
                ;;
            "Suspender")
                systemctl suspend
                ;;
        esac
    fi
fi
exit 0
