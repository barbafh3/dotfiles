abbr buku "env BROWSER=qutebrowser buku"
abbr yu "yay -Syyu"
abbr tx "tmux -f ~/.config/tmux/tmux.conf"
abbr svu "playerctl -p spotify volume +0.05"
abbr svd "playerctl -p spotify volume -0.05"
abbr sc "run-fzf scripts"
abbr dv "run-fzf dev" 
abbr dc "run-fzf documents"
abbr img "run-fzf images"
abbr dls "run-fzf downloads"
abbr pacu "sudo pacman -Syyu"

